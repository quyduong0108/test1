<!DOCTYPE html>
<html>
  <head>
    <title>Danh sách giảng viên</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Danh sách giảng viên</h1>

    <a href="/form-add"><button>Thêm danh sách</button></a> <br>
    <table border="1">
      <tr>
        <th>ID</th>
        <th>Tên</th>
        <th>Địa chỉ</th>
        <th>Số điện thoại</th>
        <th>Mã GV</th>
        <th>ACTION</th>
      </tr>
      <% giangvien.forEach(item => { %>
        <tr>
          <td><%= item._id %></td>
          <td><%= item.Hoten %></td>
          <td><%= item.DiaChi %></td>
          <td><%= item.sdt %></td>
          <td><%= item.MaGV %></td>
          <td><a href="/form-update/<%= item._id %>">Update</a>|| <a href="/form-delete/<%= item._id %>">delete</a></td>
        </tr>
        <%  }) %>

      
    </table>
   
  </body>
</html>